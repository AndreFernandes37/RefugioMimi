@model RefugioMimi.Models.Reserva
@{
    ViewData["Title"] = "Reservar";
}
<h2>Reservar</h2>
<form asp-action="Index" method="post" class="row g-3">
    <div class="col-md-6">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="Hospedes" class="form-label"></label>
        <input asp-for="Hospedes" class="form-control" />
        <span asp-validation-for="Hospedes" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="DataEntrada" class="form-label"></label>
        <input asp-for="DataEntrada" type="date" class="form-control" />
        <span asp-validation-for="DataEntrada" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="DataSaida" class="form-label"></label>
        <input asp-for="DataSaida" type="date" class="form-control" />
        <span asp-validation-for="DataSaida" class="text-danger"></span>
    </div>
    <div class="col-12">
        <label asp-for="Mensagem" class="form-label"></label>
        <textarea asp-for="Mensagem" class="form-control"></textarea>
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-primary">Pagar com Stripe</button>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
